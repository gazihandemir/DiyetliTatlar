<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Fragments.CalculationsActivityBesinlerCaloriesFragment">

    <LinearLayout
        android:id="@+id/calUst"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Aramak için yazınız "
            android:textColor="@color/whiteTextColor"
            android:textColorHint="@color/whiteTextColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Besin"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="1 Porsiyon"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Calories"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/whiteTextColor"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calAlt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calculationsActivitiyBesinlerCaloriesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>